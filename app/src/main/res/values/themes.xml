<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AmengSubang" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AmengSubang.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AmengSubang.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AmengSubang.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomItemNavigation">
        <item name="bt_active">true</item>
        <item name="bt_shape">@drawable/bc_bottom_item</item>
        <item name="bt_colorActive">@color/primaryDarkColor</item>
        <item name="bt_colorInactive">@color/primaryDarkColor</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@drawable/bc_bottom_nav_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.Color" parent="AppTheme.AppBarOverlay">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.AppBarOverlay">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CollapsingToolbarLayout">
        <item name="contentScrim">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

</resources>